<div class="container">
  <ul class="breadcrumb">
    <li><a href="/">Home</a></li>
    <li class="active"><%- page.title %></li>
  </ul>
  <div class="main">
    <h1><%- page.title %></h1>
<!-- BEGIN SIDEBAR & CONTENT -->
<div class="row margin-bottom-40">
  <!-- BEGIN CONTENT -->
  <div class="col-md-12 col-sm-12">
    <div class="content-page">
      <div class="row margin-bottom-30">
	<!-- BEGIN INFO BLOCK -->               
	<div class="col-md-6">
      <h2 class="no-top-space"><%= theme.about %></h2>
      <p><%= theme.description %></p>
	  <!-- BEGIN LISTS -->
	  <!-- END LISTS -->
	</div>
	<!-- END INFO BLOCK -->   

	<!-- BEGIN CAROUSEL -->            
	<div class="col-md-6 front-carousel">
	  <div id="myCarousel" class="carousel slide">
	    <!-- Carousel items -->
        <div class="carousel-inner">
          <% theme.photos.forEach(function(photo, index) { %>
          <div class="item <%= index == 0 ? 'active' : ''%>">
            <img src=<%= photo.src %>>
            <div class="carousel-caption">
              <p><%= photo.caption %></p>
            </div>
          </div>
          <% }); %>
	    </div>
	    <!-- Carousel nav -->
	    <a class="carousel-control left" href="#myCarousel" data-slide="prev">
	      <i class="fa fa-angle-left"></i>
	    </a>
	    <a class="carousel-control right" href="#myCarousel" data-slide="next">
	      <i class="fa fa-angle-right"></i>
	    </a>
	  </div>                
	</div>
	<!-- END CAROUSEL -->
      </div>

      <div class="row front-team">
	  <h3>PRINCIPAL INVESTIGATOR</h3>
	<ul class="list-unstyled">
	  <li class="col-md-3">
	    <div class="thumbnail">
          <img src=<%= theme.people.principal_investigator.thumb %>>
	      <h3>
            <strong><%= theme.people.principal_investigator.name %></strong>
            <small>Professor</small>
          </h3>
          <p><%= theme.people.principal_investigator.desc %></p>
	      <ul class="social-icons social-icons-color">
		<li><a class="facebook" data-original-title="Facebook" href="javascript:;"></a></li>
		<li><a class="twitter" data-original-title="Twitter" href="javascript:;"></a></li>
		<li><a class="googleplus" data-original-title="Goole Plus" href="javascript:;"></a></li>
		<li><a class="linkedin" data-original-title="Linkedin" href="javascript:;"></a></li>
		<li><a class="email" data-original-title="Linkedin" href="mailto:ychung@postech.ac.kr"></a></li>
	      </ul>
	    </div>
	  </li>
	</ul>            
      </div>
      <div class="row front-team">
	  <h3>GRADUATE STUDENTS</h3>
      <ul class="list-unstyled">
        <% theme.people.graduate_students.forEach(function(student) { %>
        <li class="col-md-3">
          <div class="thumbnail">
            <img src=<%= student.thumb %>>
            <h3>
              <strong><%= student.name %></strong> 
              <small>Graduate students</small>
            </h3>
            <p><%- student.desc.replace("\n", "<br>") %></p>
            <ul class="social-icons social-icons-color">
              <li><a class="facebook" data-original-title="Facebook" href="javascript:;"></a></li>
              <li><a class="twitter" data-original-title="Twitter" href="javascript:;"></a></li>
              <li><a class="googleplus" data-original-title="Goole Plus" href="javascript:;"></a></li>
              <li><a class="linkedin" data-original-title="Linkedin" href="javascript:;"></a></li>
            </ul>
          </div>
        </li>
    <% }); %>
	</ul>            
      </div>

      <div class="row front-team">
        <h3>UNDERGRADUATE INTERNS(Current)</h3>
	<ul class="list-unstyled">
      <% theme.people.cur_interns.forEach(function(intern) { %>
      <li class="col-md-3">
	    <div class="thumbnail">
	      <h3>
            <strong><%= intern.name %></strong> 
            <small><%= intern.desc %></small>
	      </h3>
	    </div>
      </li>
    <% }); %>
	</ul>            
      </div>

      <div class="row front-team">
        <h3>UNDERGRADUATE INTERNS(Previous)</h3>
	<ul class="list-unstyled">
      <% theme.people.prev_interns.forEach(function(intern) { %>
      <li class="col-md-3">
	    <div class="thumbnail">
	      <h3>
            <strong><%= intern.name %></strong> 
            <small><%= intern.desc %></small>
	      </h3>
	    </div>
      </li>
    <% }); %>
	</ul>            
      </div>

    </div>
  </div>
  <!-- END CONTENT -->
</div>
<!-- END SIDEBAR & CONTENT -->
</div>
</div>
